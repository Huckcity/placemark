<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-128x128">
        <img class="place-thumb" src="{{placeImage}}">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong class="is-size-4">
            <a href="/places/{{_id}}">{{name}}</a>
          </strong> <small class="has-text-grey-light"> by {{user.username}} @ {{formatDate updatedAt}}</small>
          <br>
          {{#if category}}
            <small>
              Category: <a href="/places/category/{{category.slug_name}}">{{category.name}}</a>
            </small>
          {{else}}
            <small>
              Category: Uncategorized
            </small>
          {{/if}}
        </p>
        <p>
          {{truncateToWords description 50}}
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          {{#unless (equalIds currentUser._id user._id)}}
            <a class="level-item" aria-label="favourite" onclick="toggleFavourite('{{currentUser._id}}', '{{_id}}')">
              <span class="icon is-small">
                {{#if (isLiked currentUser.favouritePlaces _id)}}
                  <i id="favourite-{{_id}}" class="far fa-heart has-text-grey-light is-favourite"></i>
                {{else}}
                  <i id="favourite-{{_id}}" class="far fa-heart has-text-grey-light"></i>
                {{/if}}
              </span>
            </a>
          {{/unless}}
          
          {{#if (equalIds currentUser._id user._id)}}
            <a class="level-item" aria-label="public">
              <span class="icon is-small">
                {{#if public}}
                  <i class="fas fa-eye"></i>
                {{else}}
                  <i class="fas fa-eye-slash"></i>
                {{/if}}
              </span>
            </a>
            <a class="level-item" aria-label="edit" href="/places/edit/{{_id}}">
              <span class="icon is-small">
                <i class="fas fa-pencil" aria-hidden="true"></i>
              </span>
            </a>
            <a class="level-item" aria-label="like" href="/places/delete/{{_id}}" onclick="return verifyDelete()">
              <span class="icon is-small">
                <i class="fas fa-trash" aria-hidden="true"></i>
              </span>
            </a>
          {{/if}}
        </div>
      </nav>
    </div>
  </article>
</div>